		border="thick" 
		borderStyle="static" 
		caption="yes" 
		maximizeButton="no" 
		minimizeButton="yes" 
		showInTaskbar="yes" 
		windowState="normal"
		innerBorder="yes"
		navigable="yes"
		scroll="no"
		scrollFlat="yes"
		icon="src/smartpx64.ico"
	/> 

	<title>SPX Videotool</title>
